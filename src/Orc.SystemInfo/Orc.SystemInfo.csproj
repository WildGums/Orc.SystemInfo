<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <AssemblyName>Orc.SystemInfo</AssemblyName>
    <RootNamespace>Orc.SystemInfo</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orc.SystemInfo</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>Orc.SystemInfo library.</Description>
    <PackageTags>orc;system;environment</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>80A0D499-6EC4-49E5-B7BE-1E9F196BA7FA</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Catel.Core" Version="6.2.0" />
    <PackageReference Include="Catel.Fody" Version="4.10.0" PrivateAssets="all" />
    <PackageReference Include="Costura.Fody" Version="6.0.0" PrivateAssets="all" />
    <PackageReference Include="Fody" Version="6.9.3" PrivateAssets="all" />
    <PackageReference Include="MethodTimer.Fody" Version="3.2.3" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="5.3.1" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('net8.0')) ">
    <PackageReference Include="System.Diagnostics.PerformanceCounter" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('net9.0')) ">
    <PackageReference Include="System.Diagnostics.PerformanceCounter" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('net10.0')) ">
    <PackageReference Include="System.Diagnostics.PerformanceCounter" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="costura-win-x86\WbemShim.dll" />
    <None Remove="costura-win-x64\WbemShim.dll" />
    <None Remove="Resources\Dlls\x64\WbemShim.dll" />
    <None Remove="Resources\Dlls\x86\WbemShim.dll" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="costura-win-x86\WbemShim.dll" />
    <EmbeddedResource Include="costura-win-x64\WbemShim.dll" />
    <EmbeddedResource Include="Resources\Dlls\x64\WbemShim.dll" />
    <EmbeddedResource Include="Resources\Dlls\x86\WbemShim.dll" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.Build.nullable.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.Build.nullable.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.Build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.Build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.Build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.Build.shared.mat.props')" />
</Project>
