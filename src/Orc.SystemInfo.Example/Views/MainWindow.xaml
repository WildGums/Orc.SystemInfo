<catel:Window x:Class="Orc.SystemInfo.Example.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:catel="http://schemas.catelproject.com"
              xmlns:views="clr-namespace:Orc.SystemInfo.Example.Views"
              xmlns:orccontrols="http://schemas.wildgums.com/orc/controls"
              xmlns:orclogviewer="http://schemas.wildgums.com/orc/logviewer"
              xmlns:orctheming="http://schemas.wildgums.com/orc/theming"
              Height="600" Width="800">

    <orccontrols:StackGrid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <orctheming:ThemeSwitcherView />
            <orctheming:FontSizeSwitcherView />
        </StackPanel>

        <orccontrols:TabControl>
            <TabItem Header="System info">
                <views:SystemInfoView />
            </TabItem>

            <TabItem Header="System identification">
                <views:SystemIdentificationView />
            </TabItem>
        </orccontrols:TabControl>

        <orclogviewer:AdvancedLogViewerControl />
    </orccontrols:StackGrid>
    
</catel:Window>



